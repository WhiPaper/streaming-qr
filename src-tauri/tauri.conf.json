{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Streaming QR",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "identifier": "com.example.streamingqr"
    },
    "windows": [
      {
        "title": "Streaming QR Prototype",
        "width": 1024,
        "height": 720,
        "resizable": true
      }
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "distDir": "../dist",
    "devPath": "http://localhost:1420"
  }
}
